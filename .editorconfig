# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[{*.js,*.ts,*.tsx}]
quote_type = double

[*.py]
indent_size = 4

[*.sh]
end_of_line = lf
indent_size = 4

[*.ps1]
end_of_line = crlf

[*.md]
max_line_length = off
trim_trailing_whitespace = false
